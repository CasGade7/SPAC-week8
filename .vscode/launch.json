  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Run backend as module.",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main"
    },
    {
      "name": "Python Debugger: Run frontend as module.",
      "type": "debugpy",
      "request": "launch",
      "module": "src.cli",
      "cwd": "${workspaceFolder}/frontend/"
    },
    {
      "name": "Python Debugger: Debug frontend 'set-product' with args.",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend/",
      "module": "src.cli",
      "args": ["set-product", "--id", "1", "Name=TestName", "Color=White"]
    }
  ]
}
